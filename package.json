{
    "name": "elements-of-prompt-engineering",
    "displayName": "Elements of Prompt Engineering",
    "description": "Course materials and utilities for The Elements of Prompt Engineering",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.74.0",
        "node": ">=14.0.0"
    },
    "categories": [
        "Education",
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.helloWorld",
                "title": "Hello World"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "demo:js": "node src/demo.js",
        "demo:py": "python src/demo.py",
        "start": "npm run demo:js"
    },
    "dependencies": {
        "chalk": "^4.1.2"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "eslint": "^9.25.1",
        "glob": "^8.0.3",
        "mocha": "^10.1.0",
        "typescript": "^4.9.3",
        "@vscode/test-electron": "^2.2.0",
        "nodemon": "^3.0.1"
    }
} 